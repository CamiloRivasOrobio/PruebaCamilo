@{
    ViewData["Title"] = "Inicio";
}

@section css {
<style>
    .app-main {
        @* background-image: url("/assets/images/cubbas.png"); *@ background-size: cover;
    }

    .logoprincipal img {
        width: 350px;
        display: block;
        margin: auto;
    }

    .logoprincipal {
        width: 100%;
    }

    @@media screen and (max-width: 620px) {
        .logoprincipal img {
            width: 250px;
            display: block;
            margin: auto;
        }
    }
</style>
}


<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-12">
                <h5><b>Próximos cumpleaños</b></h5>
                <hr>
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="tabla-pacientes-cumpleannios">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Paciente</th>
                                <th>Cumpleaños</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!--ko foreach: pacientesCumpleannios-->
                            <tr>
                                <td data-bind="text: id"></td>
                                <td data-bind="text: nombre"></td>
                                <td data-bind="text: moment(fechaNacimiento).format('MMM Do')"></td>
                            </tr>
                            <!--/ko-->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-12">
                <h5><b>Pacientes aplicables para membresía</b></h5>
                <hr>
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="tabla-pacientes-aplicables-membresia">
                        <thead>
                            <tr>
                                <th>Paciente</th>
                                <th>Fecha de inicio de tratamiento</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!--ko foreach: pacientesAplicablesMembresia-->
                            <tr>
                                <td data-bind="text:nombrePaciente"></td>
                                <td data-bind="text:moment(fechaRegistro).format('ll')"></td>
                                <td>
                                    <button data-bind="click:$root.aplicarMembresia"
                                            class="btn btn-primary btn-sm">
                                        Aplicar membresía
                                    </button>
                                </td>
                            </tr>
                            <!--/ko-->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-12">
                <h5><b>Cuentas pendientes</b></h5>
                <hr>
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="tabla-cuentas-pendientes">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Paciente</th>
                                <th>Fecha límite de pago</th>
                                <th>Valor</th>
                                <th>Pagada</th>
                                <th>Enviar mensaje</th>
                                <th>Ver detalles</th>
                                <th>Pagar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!--ko foreach: cuentasPendientes-->
                            <tr>
                                <td data-bind="text: id"></td>
                                <td data-bind="text: paciente.nombre"></td>
                                <td data-bind="text: moment(fechaLimitePago).format('ll')"></td>
                                <td data-bind="text: valor"></td>
                                <td data-bind="text: pagadaText"></td>
                                <td><button class="btn btn-primary">Enviar mensaje</button></td>
                                <td><button class="btn btn-primary">Ver detalles</button></td>
                                <td><button class="btn btn-primary">Pagar</button></td>
                            </tr>
                            <!--/ko-->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
