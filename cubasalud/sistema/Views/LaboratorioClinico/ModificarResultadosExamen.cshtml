@model sistema.Models.ModificarResultadosExamen
@{
    Layout = "_Layout";
    ViewData["Title"] = "Modificar";
}

@await Html.PartialAsync("_MensajeExito")

<form asp-controller="LaboratorioClinico" asp-action="ModificarResultadosExamen" method="post">

    @Html.HiddenFor(a => a.ExamenId)
    @Html.HiddenFor(a => a.Id)
    @Html.HiddenFor(a => a.DetalleExamen.ExamenLabClinicoId)

    <div class="main-card mb-3 card">
        <div class="card-body">
            <div class="form-row">
                <div class="col-12 text-center">
                    <h4><b>Modificar resultados de examen</b></h4>
                </div>
            </div>
        </div>
    </div>

    <div class="main-card mb-3 card">
        <div class="card-body">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <div class="form-row">
                        <div class="col-md-12">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Campo</th>
                                        <th>Resultado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.DatosResultados.Count(); i++)
                                    {
                                        var res = Model.DatosResultados[i];

                                        var nombreCampo = Model.DatosResultados[i].DatosExamenesLabClinico == null ? ""
                                        : Model.DatosResultados[i].DatosExamenesLabClinico.Campos;

                                        <tr>
                                            <td><b>@nombreCampo</b></td>
                                            <td>
                                                <input class="form-control" asp-for="DatosResultados[i].ValorResultado" />
                                                <input type="hidden" asp-for="DatosResultados[i].Id">
                                                <input type="hidden" asp-for="DatosResultados[i].DetalleExamenId">
                                                <input type="hidden" asp-for="DatosResultados[i].DatosExamenesLabClinicoId">
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-card mb-3 card">
        <div class="card-body">
            <div class="form-row">
                <div class="col-md-12">
                    <button class="btn btn-success">Guardar resultados</button>
                </div>
            </div>
        </div>
    </div>

</form>


@section Scripts{
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
<script type="text/javascript" src="~/js/moment.min.js"></script>
<script type="text/javascript" src="~/js/daterangepicker.js"></script>
<script type="text/javascript" src="~/js/tempusdominus-bootstrap-4.min.js"></script>
}
